{
  "name": "Java Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": ["vscjava.vscode-java-pack", "ms-azuretools.vscode-docker"],
      "settings": {
        "java.jdt.ls.java.home": "/usr/local/openjdk-17",
        "java.import.gradle.wrapper.enabled": true
      }
    }
  },
  "remoteUser": "root"
}
